<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merin.expense"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.merin.expense.PwdActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.merin.expense.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName="com.merin.expense.PwdActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.merin.expense.PwdActivity" />
        </activity>
        <activity
            android:name="com.merin.expense.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.merin.expense.ForgotPass"
            android:label="@string/title_activity_forgot_pass" >
        </activity>
        <activity
            android:name="com.merin.expense.NewUserActivity"
            android:label="@string/title_activity_new_user" >
        </activity>
    </application>

</manifest>
