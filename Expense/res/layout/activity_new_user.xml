<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewUserActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_edittext"
        android:layout_alignParentTop="true"
        android:text="@string/fill_the_details_to_register_new_user"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/enter_email_id" />

    <EditText
        android:id="@+id/user_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_edittext"
        android:layout_below="@+id/email_edittext"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="@string/enter_user_id" />

    <EditText
        android:id="@+id/pass_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_edittext"
        android:layout_below="@+id/user_edittext"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/enter_password" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pass_edittext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pass_edittext"
        android:layout_below="@+id/pass_edittext"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="@string/re_enter_password" />

    <Button
        android:id="@+id/nuser_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pass_edittext1"
        android:layout_marginBottom="36dp"
        android:text="@string/ok" />

    <Button
        android:id="@+id/nuser_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nuser_ok_button"
        android:layout_alignBottom="@+id/nuser_ok_button"
        android:layout_alignLeft="@+id/pass_edittext1"
        android:text="@string/reset" />

</RelativeLayout>
